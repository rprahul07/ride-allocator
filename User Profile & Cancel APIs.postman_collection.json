{
	"info": {
		"_postman_id": "user-profile-cancel-apis-2024",
		"name": "User Profile & Cancel APIs",
		"description": "Collection for user profile and ride cancellation endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "User Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"phone_number\": \"1234567890\",\n    \"name\": \"John Doe\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/users/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"users",
						"login"
					]
				},
				"description": "Login to get user JWT token for authenticated requests"
			},
			"response": []
		},
		{
			"name": "Get User Profile",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/users/profile",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"users",
						"profile"
					]
				},
				"description": "Get user profile information with embedded statistics\n\nResponse includes:\n- id: User ID\n- phone_number: Phone number\n- name: User name\n- is_active: Account status\n- created_at: Account creation date\n- last_login: Last login timestamp\n- stats: Object containing:\n  - total_rides: Total rides requested\n  - completed_rides: Successfully completed rides\n  - total_spent: Total amount spent\n  - avg_fare: Average fare per ride"
			},
			"response": []
		},
		{
			"name": "Request Ride",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{user_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"pickup_address\": \"123 Main Street, City\",\n    \"drop_address\": \"456 Oak Avenue, City\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/users/rides/request",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"users",
						"rides",
						"request"
					]
				},
				"description": "Request a new ride with pickup and drop addresses"
			},
			"response": []
		},
		{
			"name": "Cancel Ride",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/users/rides/:ride_id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"users",
						"rides",
						":ride_id"
					]
				},
				"description": "Cancel a ride request\n\nOnly rides with 'pending' status can be cancelled\n\nURL Parameters:\n- ride_id: UUID of the ride to cancel\n\nResponse:\n- success: true if cancelled\n- error if ride not found or not in pending status"
			},
			"response": []
		},
		{
			"name": "Get Ride Status",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/users/rides/:ride_id/status",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"users",
						"rides",
						":ride_id",
						"status"
					]
				},
				"description": "Check current status of a specific ride"
			},
			"response": []
		},
		{
			"name": "Get Ride History",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/users/rides/history?limit=20&offset=0",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"users",
						"rides",
						"history"
					],
					"query": [
						{
							"key": "limit",
							"value": "20"
						},
						{
							"key": "offset",
							"value": "0"
						}
					]
				},
				"description": "Get user's ride history with pagination"
			},
			"response": []
		},
		{
			"name": "Get Notifications",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/users/notifications?limit=20&offset=0",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"users",
						"notifications"
					],
					"query": [
						{
							"key": "limit",
							"value": "20"
						},
						{
							"key": "offset",
							"value": "0"
						}
					]
				},
				"description": "Get user's notifications with pagination"
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "user_token",
			"value": "",
			"type": "string"
		}
	]
}
